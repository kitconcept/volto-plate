{
  "name": "@plone/volto-plate",
  "version": "1.0.0-alpha.0",
  "description": "An add-on that adds a Plate.js block for Volto",
  "main": "src/index.ts",
  "license": "MIT",
  "keywords": [
    "volto-addon",
    "volto",
    "plone",
    "react"
  ],
  "author": "Plone Community",
  "homepage": "https://github.com/collective/volto-plate#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:collective/volto-plate"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "i18n": "rm -rf build/messages && NODE_ENV=production i18n --addon",
    "dry-release": "release-it --dry-run",
    "release": "release-it",
    "release-major-alpha": "release-it major --preRelease=alpha",
    "release-alpha": "release-it --preRelease=alpha"
  },
  "addons": [
    "@plone/plate"
  ],
  "dependencies": {
    "@plone/plate": "workspace:*"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@plone/registry": "workspace:*",
    "@plone/types": "workspace:*"
  },
  "devDependencies": {
    "@storybook/react": "^8.6.12",
    "@plone/scripts": "workspace:*",
    "@plone/volto-slate": "workspace:*",
    "@plone/types": "workspace:*",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "release-it": "^19.0.5",
    "typescript": "^5.7.3",
    "vitest": "^3.1.2"
  }
}
