{
  "name": "@kitconcept/volto-plate-dev",
  "version": "1.0.0-alpha.0",
  "description": "An add-on that adds a Plate.js block for Volto",
  "author": "kitconcept, GmbH",
  "homepage": "https://github.com/kitconcept/volto-plate",
  "license": "MIT",
  "keywords": [
    "volto-addon",
    "volto",
    "plone",
    "react",
    "plate"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "VOLTOCONFIG=$(pwd)/volto.config.js pnpm --filter @plone/volto start",
    "start:prod": "pnpm --filter @plone/volto start:prod",
    "build": "VOLTOCONFIG=$(pwd)/volto.config.js pnpm --filter @plone/volto build || true",
    "build:deps": "pnpm --filter @plone/registry --filter @plone/components build",
    "i18n": "pnpm --filter @kitconcept/volto-plate i18n && VOLTOCONFIG=$(pwd)/volto.config.js pnpm --filter @plone/volto i18n",
    "test": "pnpm --filter @kitconcept/volto-plate exec vitest --passWithNoTests",
    "lint": "VOLTOCONFIG=$(pwd)/volto.config.js eslint --max-warnings=0 'packages/**/src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "VOLTOCONFIG=$(pwd)/volto.config.js eslint --fix 'packages/**/src/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --check 'packages/**/src/**/*.{js,jsx,ts,tsx}'",
    "prettier:fix": "prettier --write 'packages/**/src/**/*.{js,jsx,ts,tsx}' ",
    "stylelint": "stylelint 'packages/**/src/**/*.{css,scss,less}' --allow-empty-input",
    "stylelint:fix": "stylelint 'packages/**/src/**/*.{css,scss,less}' --fix --allow-empty-input",
    "dry-release": "pnpm --filter @kitconcept/volto-plate dry-release",
    "release": "pnpm --filter @kitconcept/volto-plate release",
    "release-major-alpha": "pnpm --filter @kitconcept/volto-plate release-major-alpha",
    "release-alpha": "pnpm --filter @kitconcept/volto-plate release-alpha",
    "storybook": "VOLTOCONFIG=$(pwd)/volto.config.js pnpm --filter @plone/volto storybook dev -p 6006 -c $(pwd)/.storybook",
    "storybook-build": "VOLTOCONFIG=$(pwd)/volto.config.js pnpm --filter @plone/volto build-storybook -c $(pwd)/.storybook"
  },
  "dependencies": {
    "@plone/registry": "workspace:*",
    "@plone/volto": "workspace:*",
    "@kitconcept/volto-plate": "workspace:*",
    "@kitconcept/volto-light-theme": "^8.0.0-alpha.8"
  },
  "devDependencies": {
    "mrs-developer": "^2.2.0"
  },
  "pnpm": {
    "overrides": {
      "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
      "react-refresh": "^0.14.2",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "@types/react": "^18.3.1",
      "@types/react-dom": "^18.3.1"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "core-js",
      "core-js-pure",
      "cypress",
      "es5-ext",
      "esbuild",
      "full-icu",
      "lightningcss-cli",
      "msgpackr-extract",
      "msw",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.20.0"
}
